                    <!--<artifactId>arquillian-protocol-servlet</artifactId>-->
                    <!--<scope>test</scope>-->
                <!--</dependency>-->
            </dependencies>
        </profile>
        <profile>
            <id>test-remote</id>
            <dependencies>
                <!--<dependency>-->
                    <!--<groupId>org.wildfly</groupId>-->
                    <!--<artifactId>wildfly-arquillian-container-remote</artifactId>-->
                    <!--<scope>test</scope>-->
                <!--</dependency>-->
                <!--<dependency>-->
                    <!--<groupId>org.jboss.arquillian.protocol</groupId>-->
                    <!--<artifactId>arquillian-protocol-servlet</artifactId>-->
                    <!--<scope>test</scope>-->
                <!--</dependency>-->
            </dependencies>
        </profile>
    </profiles>

</project>
